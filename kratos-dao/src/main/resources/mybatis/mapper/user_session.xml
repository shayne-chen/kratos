<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shaw.kratos.dao.mapper.user.UserSessionMapper">

    <resultMap id="userSession" type="com.shaw.kratos.dto.user.UserSessionDO">
        <result property="id" column="id"/>
        <result property="uid" column="uid"/>
        <result property="sid" column="sid"/>
        <result property="status" column="status"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
    </resultMap>

    <sql id="table_name">
        user_session
    </sql>

    <sql id="select-param-column">
        id,
        uid,
        sid,
        status,
        gmt_create,
        gmt_modified
    </sql>

    <sql id="set">
        <if test="id != null ">
            id = #{ id },
        </if>
        <if test="uid != null ">
            uid = #{ uid },
        </if>
        <if test="sid != null ">
            sid = #{ sid },
        </if>
        <if test="status != null ">
            status = #{ status },
        </if>
        <if test="gmtCreate != null ">
            gmt_create = #{ gmtCreate },
        </if>
        <if test="gmtModified != null ">
            gmt_modified = #{ gmtModified },
        </if>
    </sql>

    <insert id="add" parameterType="com.shaw.kratos.dto.user.UserSessionDO">
        INSERT
        <include refid="table_name"/>
        <set>
            <include refid="set"/>
        </set>
    </insert>

    <update id="update" parameterType="com.shaw.kratos.dto.user.UserSessionDO">
        update
        <include refid="table_name"/>
        <set>
            <include refid="set"/>
        </set>
        where id=#{ id }
    </update>

    <select id="getById" resultMap="userSession">
        select
        <include refid="select-param-column"/>
        from
        <include refid="table_name"/>
        where id=#{ id }
    </select>

    <delete id="deleteById">
        delete from
        <include refid="table_name"/>
        where id=#{id}
    </delete>

    <select id="getByUid" resultMap="userSession">
        select
        <include refid="select-param-column"/>
        from
        <include refid="table_name"/>
        where uid=#{ uid } and status=1
    </select>

    <select id="getBySid" resultMap="userSession">
        select
        <include refid="select-param-column"/>
        from
        <include refid="table_name"/>
        where sid=#{ sid } and status=1
    </select>

    <update id="expireAllSid">
        update
        <include refid="table_name"/>
        set status=0
        where uid=#{ uid }
    </update>


</mapper>